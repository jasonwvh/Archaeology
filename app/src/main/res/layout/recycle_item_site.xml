<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="8dp"

    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/siteRecycleItemImageIcon"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/siteRecycleItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/siteRecycleItemImageIcon"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/siteRecycleItemLocation"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_below="@id/siteRecycleItemName"
            android:fontFamily="sans-serif-thin"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/siteRecycleItemImageIcon"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/siteRecycleItemVisited"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/siteRecycleItemLocation"
            android:fontFamily="sans-serif-thin"
            android:layout_toEndOf="@+id/siteRecycleItemImageIcon"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/siteRecycleItemRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:numStars="5"
            android:layout_below="@id/siteRecycleItemVisited"
            android:layout_toEndOf="@+id/siteRecycleItemImageIcon" />

        <ImageView
            android:id="@+id/siteRecycleItemFavouriteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:tint="#ff74d8"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>